<Window x:Class="BlueToothDummyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueToothDummyClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="395.975"
        ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="dropdownPorts" HorizontalAlignment="Left" Margin="13,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="refreshPortsBtn" Content="Refresh" HorizontalAlignment="Left" Margin="138,10,0,0" VerticalAlignment="Top" Width="75" Click="refreshPortsBtn_Click"/>
        <Button x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Left" Margin="218,10,0,0" VerticalAlignment="Top" Width="75" Click="buttonConnect_Click"/>
        <Button x:Name="buttondisconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="298,10,0,0" VerticalAlignment="Top" Width="75" Click="buttondisconnect_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="275" Margin="10,37,0,0" VerticalAlignment="Top" Width="363"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />

    </Grid>
</Window>
